        print("-" * 42)
        if service == "D":
            delivery(option_list)
            run_program = False
        elif service == "P":
            pick_up(option_list)
            run_program = False
        elif service == "Q":
            print("Thank you for ordering with Papa's Pizzeria!")
            run_program = False
        else:
            print("Unrecognised entry must be P, D or Q")


