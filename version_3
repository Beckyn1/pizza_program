def get_integer(m):
    user_input = int(input(m))
    return user_input


def get_string(m):
    user_input = input(m)
    return user_input


def pick_up(l):
    order_choice = get_string("What is your name?")
    order_num = get_integer("What is your phone number?")
    # validate
    new_list = order_choice, order_num
    user.append(new_list)
    order(l)


def delivery(l):
    ask = get_string("Deliver fee of $3 will be charged, is this OK?")
    total.append(3)
    if ask == "Yes":
        order_choice = get_string("What is your name?")
        order_num = get_integer("What is your phone number?")
        address = get_string("What is your address?")
        new_list = order_choice, order_num, address
        user.append(new_list)
        order(l)
    elif ask == "No":
        return main()
    else:
        print("Unrecognisable blah")
        return delivery(l)

def order(l):
    total = []
    user = []

    pizza_list = [
        ["Cheese", 5, 0],
        ["Pepperoni", 5, 0],
        ["Hawaiian", 5, 0],
        ["Meatlovers", 5, 0]
    ]

    order_list = [
        ["M", "Menu"],
        ["A", "add to order"],
        ["R", "remove from order"],
        ["N", "add new pizza type"],
        ["D", "delete pizza type"],
        ["C", "confirm order"],
        ["Q", "quit"]
    ]

    for x in order_list:
        output = "{}: {}".format(x[0], x[1])
        print(output)
    print("-" * 42)
    order_choice = get_string("Please select an option =>")
    if order_choice == "M":
        for i in range(0, len(l)):
            output = "{}: {:<10} -- ${} ".format(i, l[i][0], l[i][1])
            print(output)
        return order(l)
    elif order_choice == "A":
        add_pizza(l)
    elif order_choice == "R":
        remove_pizza(l)
    elif order_choice == "N":
        new_pizza(l)
    elif order_choice == "D":
        delete_pizza(l)
    elif order_choice == "O":
        review(l)
    elif order_choice == "Q":
        print("Thank you for ordering with Papa's Pizzeria!")
        return
    else:
        print("Unrecognised entry must be A or R")
        return order(l)


def review(l):
    for i in l[2]:
        output = "{}: {} {:<10} -- ${}".format(i, l[i][2], l[i][0], l[i][1])
        print(output)
    print("Your total cost is ${}". format(sum(total)))
    print("person is {}".format(user))
    again = get_string("Complete another order?")
    if again == "Yes":
        user.clear()
        return main()
    else:
        print("Thank you for ordering with Papa's Pizzeria!")
        return


def add_pizza(l):
    # print list with indexes
    for i in range(0, len(l)):
        output = "{}: {:<10} -- ${}".format(i, l[i][0], l[i][1])
        print(output)

    choice = get_integer("Please choose a menu item number =>")
    print("-" * 42)
    # validate, possibly change design later to accommodate word variations
    if -1 < choice < len(l):
        quantity = get_integer("How many {} pizzas would you like to add?".format(l[choice][0]))
        # validate
        l[choice][2] += quantity
        cost_2 = l[choice][1] * quantity
        total.append(cost_2)
        print("You ordered {} {} pizzas".format(l[choice][2], l[choice][0]))
        print("-" * 42)
        print("Cost is ${}".format(cost_2))
        print("-" * 42)
        ask_again = get_string("Would you like to add another pizza?")
        if ask_again == "Yes":
            return add_pizza(l)
        else:
            return order(l)
    else:
        print("Unrecognised entry, can only be be a number on the list")
        return add_pizza(l)


