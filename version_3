def main():
    cost = 0

    pizza_list = [
        ["Cheese", 5],
        ["Pepperoni", 5],
        ["Hawaiian", 5],
        ["Meatlovers", 5]
    ]

    customer_list = [
        ["Cheese", 5, 0],
        ["Pepperoni", 5, 0],
        ["Hawaiian", 5, 0],
        ["Meatlovers", 5, 0]
    ]

    order_list = [
        ["M", "Menu"],
        ["A", "add to order"],
        ["R", "remove from order"],
        ["N", "add new pizza type"],
        ["D", "delete pizza type"],
        ["Q", "quit"]
    ]

    option_list = [
        ["D", "Delivery"],
        ["P", "Pick-up"],
        ["Q", "Quit"]
    ]

    # print welcome message
    # call the functionto get customer details
    # get_order_details(option_list)

    for x in order_list:
        output = "{}: {}".format(x[0], x[1])
        print(output)
    print("-" * 42)
    order_choice = get_string("Please select an option =>")
    if order_choice == "M":
        for x in pizza_list:
            output = "{}: {:<10} -- ${} ".format(x, x[0], x[1])
            print(output)
    elif order_choice == "A":
        add_pizza(customer_list, cost)
    elif order_choice == "R":
        remove_pizza(customer_list, cost)
    elif order_choice == "N":
        new_pizza(customer_list, pizza_list, cost)
    elif order_choice == "D":
        delete_pizza(pizza_list, cost)
    elif order_choice == "O":
        get_order_details(pizza_list, option_list)
    elif order_choice == "Q":
        print("Thank you for ordering with Papa's Pizzeria!")
        return
    else:
        print("Unrecognised entry must be A or R")


if __name__ == "__main__":
    main()


