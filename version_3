def order():
    total = []
    user = []

    pizza_list = [
        ["Cheese", 5, 0],
        ["Pepperoni", 5, 0],
        ["Hawaiian", 5, 0],
        ["Meatlovers", 5, 0]
    ]

    order_list = [
        ["M", "Menu"],
        ["A", "add to order"],
        ["R", "remove from order"],
        ["N", "add new pizza type"],
        ["D", "delete pizza type"],
        ["O", "Review order"],
        ["Q", "quit"]
    ]

    for x in order_list:
        output = "{}: {}".format(x[0], x[1])
        print(output)
    print("-" * 42)
    order_choice = get_string("Please select an option =>")
    if order_choice == "M":
        for i in range(0, len(pizza_list)):
            output = "{}: {:<10} -- ${} ".format(i, pizza_list[i][0], pizza_list[i][1])
            print(output)
        return order()
    elif order_choice == "A":
        add_pizza(pizza_list)
    elif order_choice == "R":
        remove_pizza(pizza_list)
    elif order_choice == "N":
        new_pizza(pizza_list)
    elif order_choice == "D":
        delete_pizza(pizza_list)
    elif order_choice == "O":
        review(pizza_list)
    elif order_choice == "Q":
        print("Thank you for ordering with Papa's Pizzeria!")
        return
    else:
        print("Unrecognised entry must be A or R")
        return order()


