def main():
    customer_list = []

    cost = 0

    pizza_list = [
        ["Cheese", 5],
        ["Pepperoni", 5],
        ["Hawaiian", 10],
        ["Meatlovers", 5]
    ]

    order_list = [
        ["M", "Menu"],
        ["G", "get order details"],
        ["N", "add pizza to order"],
        ["D", "delete pizza from order"],
        ["A", "add to pizza quantity"],
        ["S", "subtract from order"],
        ["R", "review order"],
        ["Q", "quit"]
    ]

    option_list = [
        ["D", "Delivery"],
        ["P", "Pick-up"]
    ]

    customer_details = []

    # print welcome message
    # call the function to get customer details
